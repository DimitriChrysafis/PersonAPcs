public class Application {
    public static void main(String args[]) {
        Person person1 = new Person("Joe", "Smith");
        Person person2 = new Person("Amanda", "Jones");
        Person person3 = new Person("Bob", "Chrysafis");
        // System.out.println(person);
        person1.displayDetails();
        person2.displayDetails();
        person3.displayDetails();
        System.out.println();
        Student student1 = new Student("smith","john");
        student1.setStudentID(45);
        student1.setCourse("physics");
        student1.setTeacherName("jill");
        Student student2 = new Student("zu","bill");
        student2.setStudentID(23);
        student2.setCourse("math");
        student2.setTeacherName("chris");
        Student student3 = new Student("lu", "dimitri", 15, "chemistry", "mr.bean");

        student1.displayDetails();
        student2.displayDetails();
        student3.displayDetails();
        System.out.println();

        Teacher teacher1 = new Teacher("le", "bill", 1, "math");
        Teacher teacher2 = new Teacher("chrysafis", "bob", 31, "physics");
        Teacher teacher3 = new Teacher("polacco", "joe", 15, "chemistry");

        teacher1.displayDetails();
        teacher2.displayDetails();
        teacher3.displayDetails();
    }

}


